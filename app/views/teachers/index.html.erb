<h1>Listing teachers</h1>

<%= link_to 'Add a New Teacher', new_teacher_path %>

<table>
    <tr>
        <th>Title</th>
        <th>Text</th>
        <th colspan="3"></th>
    </tr>

    <% @teachers.each do |teacher| %>
        <tr>
            <td><%= teacher.title %></td>
            <td><%= teacher.text %></td>
            <td><%= link_to 'Show', teacher_path(teacher) %></td>
            <td><%= link_to 'Edit', edit_teacher_path(teacher) %></td>
            <td><%= link_to 'Destroy', teacher_path(teacher),
                            method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
</table>